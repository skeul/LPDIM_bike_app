{% extends 'base.html.twig' %}

{% block title %}Les sommets{% endblock %}

{% block body %}
    <h1>Tout Les Sommets</h1>

    <table class="table">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Nom</th>
                <th>Altitude</th>
                <th>Lieu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sommet in sommets %}
            <tr>
{#                <td>{{ sommet.id }}</td>#}
                <td>{{ sommet.nom }}</td>
                <td>{{ sommet.altitude }}m</td>
                <td>{{ sommet.lieu }}</td>
                <td>
                    <a href="{{ path('sommet_show', {'id': sommet.id}) }}">show</a>
                    <a href="{{ path('sommet_edit', {'id': sommet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sommet_new') }}">Create new</a>
{% endblock %}
