{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<a href="{{ path('user_crud_index') }}" class="link"><i class="fas fa-arrow-left mr-2"></i>Retour</a>
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                {% if user.roles %}
                 {% for role in user.roles  %}
                  <span class="badge badge-info">{{role}}</span>
                 {% endfor %}
                 {% endif %}
                 </td>
                 </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Amis</th>
                <td>
                {% if user.amis %}
                 {% for ami in user.amis  %}
                  <span>{{ami.username}},&nbsp;</span>
                 {% endfor %}
                 {% endif %}
                 </td>
            </tr>
        </tbody>
    </table>

    {% include 'commons/show-form-action.html.twig' with {
        'confirm_string': 'Voulez-vous vraiment supprimer cet utilisateur?', 
        'delete_path': 'user_crud_delete',
        'edit_path': 'user_crud_edit',
        'entity_id': user.id
        }
    %}
{% endblock %}
