{% extends 'base.html.twig' %}

{% block title %}Velo index{% endblock %}

{% block body %}
    <h1>Velo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Poids</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for velo in velos %}
            <tr>
                <td>{{ velo.id }}</td>
                <td>{{ velo.marque }}</td>
                <td>{{ velo.modele }}</td>
                <td>{{ velo.poids }}</td>
                <td>{{ velo.image }}</td>
                <td>
                    <a href="{{ path('velo_crud_show', {'id': velo.id}) }}">show</a>
                    <a href="{{ path('velo_crud_edit', {'id': velo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('velo_crud_new' , {'type': 'vtt'}) }}">Create new VTT</a>
    <a href="{{ path('velo_crud_new' , {'type': 'elec'}) }}">Create new Electrique</a>
{% endblock %}
