{% extends 'base.html.twig' %}

{% block title %}Sommet{% endblock %}

{% block body %}
<a href="{{ path('sommet_crud_index') }}" class="link"><i class="fas fa-arrow-left mr-2"></i>Retour</a>

    <h1>Sommet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sommet.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sommet.nom }}</td>
            </tr>
            <tr>
                <th>Altitude</th>
                <td>{{ sommet.altitude }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ sommet.lieu }}</td>
            </tr>
        </tbody>
    </table>

    {% include 'commons/show-form-action.html.twig' with {
        'confirm_string': 'Voulez-vous vraiment supprimer ce sommet ?', 
        'delete_path': 'sommet_crud_delete',
        'edit_path': 'sommet_crud_edit',
        'entity_id': sommet.id
        }
    %}
{% endblock %}
