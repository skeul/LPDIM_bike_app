{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    {% include 'commons/table-title.html.twig' with {'title': 'Parcours', 'chemin': 'parcours_crud_new'} %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Distance</th>
                <th>Difficulte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.distance }}</td>
                <td>{{ parcour.difficulte }}</td>
                {% include 'commons/table-actions.html.twig' with {
                    'confirm_string': 'Voulez-vous vraiment supprimer ce parcours ?', 
                    'show_path': 'parcours_crud_show',
                    'edit_path': 'parcours_crud_edit',
                    'delete_path': 'parcours_crud_delete',
                    'entity_id': parcour.id
                    }
                %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun parcours trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
