{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Amis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>
                {% if user.roles %}
                 {% for role in user.roles  %}
                  <span class="badge badge-info">{{role | slice(5, 5)}}</span>
                 {% endfor %}
                 {% endif %}
                 </td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.amis|length }}
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    {% if (is_granted('ROLE_ADMIN'))%}
                        <a href="{{ path('user_crud_edit', {'id': user.id}) }}">edit</a>
                    {% elseif (is_granted('edit_user', user)) %}
                        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if ((is_granted('ROLE_ADMIN')))%}
        <a href="{{ path('user_crud_new') }}">Create new</a>
    {% endif %}
{% endblock %}
