{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <h1>Tout les Parcours</h1>

    <table class="table">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Distance</th>
                <th>Difficulty</th>
                <th>Name</th>
                <th>Passe par les sommets</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
{#                <td>{{ parcour.id }}</td>#}
                <td>{{ parcour.distance }}Km</td>
                <td>{{ parcour.difficulte }}/10</td>
                <td>{{ parcour.name }}</td>
                <td>
                    {% for sommet in parcour.sommet %}
                    <p>{{sommet.nom}}({{sommet.altitude}}m)</p>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('parcours_show', {'id': parcour.id}) }}">show</a>
                    <a href="{{ path('parcours_edit', {'id': parcour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('parcours_new') }}">Create new</a>
{% endblock %}
